  {
    "compilerOptions": {
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "allowJs": false,
      "target": "es5",
      "outDir": ".build",
      "moduleResolution": "node",
      "lib": [
        "es2015"
      ],
      "rootDir": "./",
      "incremental": true,
      "watch": true,
      "tsBuildInfoFile": ".tsbuildinfo",
      "esModuleInterop": true
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".vscode/**/*",
      "**/*.js",
      ".build/**/*"
    ]
  }